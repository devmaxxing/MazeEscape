<html>
  <head>
    <!-- Stylesheets in here -->
    <% include ./partials/head %>
    <link rel="stylesheet" href="/stylesheets/lobbyList.css">
  </head>
  <body>    
    <main class="container">
        <div class="row title-text">
            <div class="col-lg-12 text-center align-text-bottom">
              <h1>MAZE ESCAPE</h1>
              <h3>Lobby List</h3>
            </div>
        </div>
        <div class="row col-lg-10 offset-lg-1">
          <table class="table table-hover">
            <thead class="thead-dark">
              <tr>
                <th class="align-middle">Room Name</th>
                <th class="align-middle">Map Name</th>
                <th>Roles Available <br><span class="thead-helper-text">(Click Role to Join)</span></th>
              </tr>
            </thead>
            <tbody>
              <tr id="update-on-refresh-row">
                <td>Gotta love escaping mazes!</td>
                <td>maze_1</td>
                <td>
                  <button type="button" class="btn btn-danger btn-small" disabled>Librarian (1/1)</button>
                  <button id="update-on-refresh-button" type="button" class="btn btn-success btn-small">Escaper (0/1)</button>
                </td>
              </tr>
              <tr>
                <td>What is life?</td>
                <td>escape_the_house</td>
                <td>
                    <button type="button" class="btn btn-success btn-small">Investigator (0/1)</button>
                    <button type="button" class="btn btn-success btn-small">Guests (1/2)</button>
                    <button type="button" class="btn btn-danger btn-small" disabled>Haunter (1/1)</button>
                  </td>
              </tr>
              <tr>
                <td>The Best Room</td>
                <td>maze_escape</td>
                <td>
                  <a href="/lobby">
                    <button type="button" class="btn btn-success btn-small">Librarian (0/1)</button>
                  </a>
                  <a href="/lobby">
                    <button type="button" class="btn btn-success btn-small">Runner (0/1)</button>
                  </a>  
                </td>
                </tr>
              <tr id="hidden-lobby" class="hidden-element">
                <td>I'm Hidden!</td>
                <td>hidden_man</td>
                <td>
                    <button type="button" class="btn btn-danger btn-small" disabled>Hidden-Man (1/1)</button>
                    <button type="button" class="btn btn-success btn-small">Chasers (0/3)</button>
                  </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div id="successful-alert" class="row hidden-element">
          <div class="alert alert-success offset-lg-4 col-lg-4 text-center">
              Successfully updated the lobby list!
          </div>
        </div>
        <div id="unsuccessful-alert" class="row hidden-element">
            <div class="alert alert-danger offset-lg-4 col-lg-4 text-center">
              Sorry, something went wrong while updating the list. Try again in a few seconds :)
            </div>
          </div>
        <div class="row">
          <div class="col-lg-12 text-center">
              <button id="refresh-button" type="button" class="btn btn-primary btn-lg">Refresh List</button>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 text-center">
              <a href="/makeLobby">
                <button type="button" class="btn btn-primary btn-lg">Make New Lobby</button>
              </a>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12 text-center">
              <a href="/">
                <button type="button" class="btn btn-primary btn-lg">Return</button>
              </a>
          </div>
        </div>
    </main>

    <footer>
      <!-- Scripts throw in here -->
      <% include ./partials/footer %>
      <script src="/javascripts/lobby-list.js"></script>
    </footer>
  </body>
</html>
