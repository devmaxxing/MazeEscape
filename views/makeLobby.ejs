<html>
  <head>
    <!-- Stylesheets in here -->
    <% include ./partials/head %>
    <link rel="stylesheet" href="/stylesheets/makelobby.css">
  </head>
  <body>    
    <main class="container">
        <div class="row title-text">
          <div class="col-lg-12 text-center align-text-bottom">
            <h1>MAZE ESCAPE</h1>
            <h3>Create Room</h3>
          </div>
        </div>
        <div id="unsuccessful-alert-div" class="row hide-element">
            <div id="unsuccessful-alert" class="alert alert-danger offset-lg-4 col-lg-4 text-center">
            </div>
          </div>
        <div class="row">
          <form id="create-room-form" action="/lobby" method="POST" class="offset-lg-3 col-lg-6">
            <div class="form-group row">
              <label for="room-name" class="col-lg-4 col-form-label required">Room Name</label>
              <div class="col-lg-8">
                <input required type="text" class="form-control" name="roomName" id="room-name" placeholder="Room Name">
                <small class="form-text text-muted">Room Name must be at least 3 characters long</small>
              </div>
            </div>
            <div class="form-group row">
              <label for="password-input" class="col-lg-4 col-form-label">Password</label>
              <div class="col-lg-8">
                <input type="password" class="form-control" name="password" id="password-input" placeholder="Password (Optional)">
              </div>
            </div>
            <div class="form-group row">
              <label for="password-input" class="col-lg-4 col-form-label required">Map</label>
              <div class="col-lg-8">
                <select required name="selectedMap" id="selected-map" class="form-control">
                  <option value="default" selected hidden>Select Map</option>
                  <option value="maze_1">maze_1</option>
                </select>
              </div>
            </div>
            <div class="row">
              <p class="col-lg-4">Map Details</p>
              <div class="col-lg-8">
                <p id="map-details">Please select a map to get details on it.</p>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12 text-center">
                <button type="button" id="form-submit-btn" class="btn btn-primary btn-lg">Create</button>
                <a href="/lobbylist">
                  <button type="button" class="btn btn-danger btn-lg">Cancel</button>
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>

    <footer>
      <!-- Scripts throw in here -->
      <% include ./partials/footer %>
      <script src="/javascripts/make-lobby.js"></script>
    </footer>
  </body>
</html>
